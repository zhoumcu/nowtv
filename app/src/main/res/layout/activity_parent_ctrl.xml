<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#121212"
              android:orientation="vertical"
              android:paddingLeft="30dp"
              android:paddingRight="30dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_status_locked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/parental_control_tips"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/bg_edit_rounded"
        android:hint="@string/enter_now_id_password"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"/>


    <CheckBox
        android:id="@+id/cb_confirm_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:button="@drawable/ic_parental_check_selector"
        android:checked="false"
        android:hint="@string/parental_confirm"
        android:paddingLeft="@dimen/middle_padding"
        android:textColorHint="@color/grey"/>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bbuton_parental_rounded"
        android:text="@string/confirm"/>


</LinearLayout>
